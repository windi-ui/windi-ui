{
	"compilerOptions": {
		"module": "ESNext",
		"target": "es2017",
		"lib": [
			"ESNext",
			"DOM"
		],
		"esModuleInterop": true,
		"strict": true,
		"strictNullChecks": true,
		"moduleResolution": "Node",
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [ "src/**/*" ],
	"exclude": [
		"**/dist",
		"**/node_modules",
		"**/test",
		"dist"
	]
}